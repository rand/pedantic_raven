# Component Architecture

direction: right

app: Application {
  shape: rectangle
}

modes: Mode Registry {
  shape: rectangle
}

editor: Editor {
  shape: rectangle

  buffer: Buffer
  search: Search
  semantic: Semantic Analysis
  syntax: Syntax
}

memory: Memory {
  shape: rectangle

  list: Memory List
  detail: Memory Detail
  graph: Graph View
}

analyze: Analysis {
  shape: rectangle

  stats: Statistics
  viz: Visualizations
}

infra: Infrastructure {
  shape: rectangle

  mnemosyne: mnemosyne Client
  gliner: GLiNER Client
}

ui: UI {
  shape: rectangle

  layout: Layout
  overlay: Overlays
  palette: Command Palette
}

# Connections
app -> modes
modes -> editor
modes -> memory
modes -> analyze

editor.semantic -> infra.gliner
memory -> infra.mnemosyne

ui.layout -> editor
ui.layout -> memory
ui.layout -> analyze
ui.overlay -> app
ui.palette -> app
