# Offline State Machine

disconnected: Disconnected {
  shape: circle
}

connecting: Connecting {
  shape: circle
}

connected: Connected {
  shape: circle
}

syncing: Syncing {
  shape: circle
}

synced: Synced {
  shape: circle
}

disconnected -> connecting: Start
connecting -> connected: Success
connecting -> disconnected: Failure
connected -> syncing: Changes detected
syncing -> synced: Complete
synced -> connected: Idle
connected -> disconnected: Health check fail
disconnected -> connecting: Retry (exponential backoff)
