  style: {
    stroke: "#2C3E50"
    stroke-width: 2
  }
}

service -> fastapi: "uses" {
  style: {
    stroke: "#2C3E50"
    stroke-width: 2
  }
}

service -> postgresql: "uses" {
  style: {
    stroke: "#2C3E50"
    stroke-width: 2
  }
}

alice -> authentication: "needs to add" {
  style: {
    stroke: "#E74C3C"
    stroke-width: 2
    stroke-dash: 3
  }
}

authentication -> jwt: "implements with" {
  style: {
    stroke: "#2C3E50"
    stroke-width: 2
  }
}

authentication -> q3_launch: "required before" {
  style: {
    stroke: "#E74C3C"
